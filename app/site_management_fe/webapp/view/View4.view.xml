        <Panel
            headerText="Materials Details"
            class="whiteCard"
            expandable="false"
        >
            <Table
                id="materialTable"
                items="{formData>/materials}"
                inset="false"
            >
                <!-- ===== Header Toolbar ===== -->
                <headerToolbar>
                    <Toolbar>
                        <Title text="" />
                        <ToolbarSpacer />
                        <Button
                            text="Add Row"
                            icon="sap-icon://add"
                            press=".onAddMaterialRow"
                        />
                    </Toolbar>
                </headerToolbar>

                <!-- ===== Columns ===== -->
                <columns>
                    <Column>
                        <Text text="Material" />
                    </Column>

                    <Column>
                        <Text text="Material Description" />
                    </Column>

                    <Column>
                        <Text text="Quantity" />
                    </Column>

                    <Column>
                        <Text text="Batch" />
                    </Column>

                    <!-- <Column
                        hAlign="Center"
                        width="4rem"
                    >
                        <Text text="Delete" />
                    </Column> -->
                </columns>

                <!-- ===== Rows ===== -->
                <items>
                    <ColumnListItem>
                        <cells>
                            <Input
                                value="{formData>material}"
                                placeholder="Enter Material"
                            />

                            <Input
                                value="{formData>materialDesc}"
                                placeholder="Enter Description"
                            />

                            <Input
                                value="{formData>remarks}"
                                placeholder="Enter Quantity"
                            />
                             <Input
                                value="{formData>remarks}"
                                placeholder="Enter Batch"
                            />

                            <!-- <Button
                                icon="sap-icon://delete"
                                type="Transparent"
                                press=".onDeleteMaterialRow"
                            /> -->
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </Panel>

        <!-- DYNAMIC PRODUCTION LINES -->
        <VBox
