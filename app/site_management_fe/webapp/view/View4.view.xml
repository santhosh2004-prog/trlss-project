        <Panel
            headerText="General Information"
            class="whiteCard"
        >
            <!-- ================= ROW 1 ================= -->
            <layout:Grid
                defaultSpan="L6 M6 S12"
                hSpacing="1"
            >
                <VBox>
                    <Label text="Customer" />
                    <Input
                        value="{formData>/siteMaster/customer_name}"
                        editable="false"
                    />
                </VBox>

                <VBox>
                    <Label text="Location" />
                    <Input
                        value="{formData>/siteMaster/location}"
                        editable="false"
                    />
                </VBox>
            </layout:Grid>

            <!-- ================= ROW 2 ================= -->
            <layout:Grid
                defaultSpan="L6 M6 S12"
                hSpacing="1"
